<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nahmens.rhcimax"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nahmens.rhcimax.controlador.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.ClientesActivity"
            android:label="@string/title_activity_clientes" >
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.AplicacionActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <!-- android:windowSoftInputMode="adjustPan": Esta linea es super importante cuando se tiene edit text dentro de list view -->
        <activity
            android:name="com.nahmens.rhcimax.controlador.LogoutActivity"
            android:label="@string/title_activity_log_out" >
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.DatosClienteActivity"
            android:label="@string/title_activity_datos_cliente" >
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.ServiciosActivity"
            android:label="@string/title_activity_servicios" >
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.FilaClienteActivity"
            android:label="@string/title_activity_fila_cliente" >
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.DatosEmpresaActivity"
            android:label="@string/title_activity_datos_empresa" >
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.FilaEmpleadoActivity"
            android:label="@string/title_activity_fila_empleado" >
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.HistoricosActivity"
            android:label="@string/title_activity_historicos" >
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.TareasActivity"
            android:label="@string/title_activity_tareas" >
        </activity>
        <activity
            android:name="com.nahmens.rhcimax.controlador.DatosTareaActivity"
            android:label="@string/title_activity_datos_tarea" >
        </activity>
    </application>

</manifest>