    <!-- FILA DEL tableLayoutListEmpleados DEFINIDA EN activity_datos_empresa.xml  -->
<TableRow
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
			    
		<TextView
		    android:id="@+id/textViewNombreEmp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="5dp"
		    android:textIsSelectable="true" />
			
		<TextView
	    	android:id="@+id/textViewApellidoEmp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textIsSelectable="true"  />

	</LinearLayout>

    <TextView
        android:id="@+id/textViewPosicionEmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"  />

    <ImageButton
        android:id="@+id/imageButtonVerEmpleado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:src="@android:drawable/ic_menu_view" 
		android:contentDescription="@string/ver_empleado"/>

</TableRow>
