<?xml version="1.0" encoding="utf-8"?>

<!-- FILA DEL tableLayoutListaServicios DEFINIDA EN activity_servicios.xml  -->

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

		<CheckBox
			android:id="@+id/checkBoxServicio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		
		
		<LinearLayout 
		    android:id="@+id/linearLayoutMedida"
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_marginLeft="40dp"
	        android:visibility="gone">
	        
		    <TextView
				android:id="@+id/textViewMedida"
				style="@style/FuenteObservacion"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		    
			<TextView 
				android:id="@+id/textViewUnidadMedicion"
				android:layout_marginLeft="5dp"
				style="@style/FuenteObservacion"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	        
		</LinearLayout >

	
	</LinearLayout>


	<ImageButton
	    android:id="@+id/imageButtonOpciones"
	    android:layout_gravity="right"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@android:drawable/ic_menu_more" 
	    android:contentDescription="@string/opciones"/>

</TableRow>