<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ContenedorPrincipal">

   <!--  <TextView
        android:id="@+id/textViewSettings"
        style="@style/FuenteTitulos"
        android:text="@string/settings" /> -->

	<TextView
	    style="@style/FuenteSubTitulos"
		android:id="@+id/textViewSettings"
	    android:text="@string/BDApp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/textViewServer"
            style="@style/FuenteFormularios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/server" />

        <EditText
            android:id="@+id/editTextServer"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="22dp"
            android:layout_weight="0.91"
            android:ems="10"
            android:inputType="textUri" />

        <ImageButton
            android:id="@+id/imageButtonGuardar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/guardar"
            android:src="@android:drawable/ic_menu_save" />
    </TableRow>
    </TableLayout>

</LinearLayout>